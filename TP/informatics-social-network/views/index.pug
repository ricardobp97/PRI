extends layout
 
block content
  .w3-container.w3-center.w3-jumbo
    header.w3-container.w3-teal
      h1 Informatics Social Network
  .w3-container.w3-large
    .w3-bar.w3-dark-grey.w3-mobile
      .w3-bar-item
        form.w3-container(action='/sobre', method='GET')
          input.w3-button.w3-wide(type= 'submit', value= 'Sobre')
      .w3-bar-item
        form.w3-container(action='/contactos', method='GET')
          input.w3-button.w3-wide(type= 'submit', value= 'Contactos')
      .w3-bar-item.w3-right
        form.w3-container(action='/registo', method='GET')
          input.w3-button.w3-wide(type= 'submit', value= 'Registo')
      .w3-bar-item.w3-right
        form.w3-container(action='/login', method='GET')
          input.w3-button.w3-wide(type= 'submit', value= 'Login')
    br
    .w3-container
      .w3-card
        header.w3-container.w3-grey
          h2.w3-center
            b Feed de Notícias
          .w3-bar.white.w3-mobile
            .w3-bar-item
              form.w3-container(action='/publicacoes/publicas', method='GET')
                input.w3-button.w3-wide(type= 'submit', value= 'Publicacões')
            .w3-bar-item.w3-right
              form.w3-container(action='/eventos/publicas', method='GET')
                input.w3-button.w3-wide(type= 'submit', value= 'Eventos')
        
        .w3-card  
          if ( publicacoes )
            if ( publicacoes.length > 0) 
              .w3-container
                  ul.w3-ul.w3-border
                    each p in publicacoes
                      li
                        h3= p.titulo  
                        p= p.curso
                        h6= p.data
                        p= p.descricao
            
            else 
              .w3-container
                h4.w3-center
                  b Sem publicacões públicas

          if ( eventos )
            if ( eventos.length > 0) 
              .w3-container
                        ul.w3-ul.w3-border
                          each e in eventos
                            li
                                h3= e.titulo  
                                h4= "Tipo: " + e.tipo
                                h6= "Data: " + e.data
                                h6= "Local: " + e.local
                                if (e.duracao)
                                  h6= "Duração: " + e.duracao
                                if (e.uc)
                                  h6= "UC: " + e.uc
            
            else 
              .w3-container
                h4.w3-center
                  b Sem eventos públicos
                  
  br
  br
  .w3-container.w3-center.w3-bottom
    footer.w3-container.w3-teal
       address Informatics Social Network by RS/BS/RP copyrights reserved.