extends layout

block content
  .w3-container.w3-center.w3-jumbo
    header.w3-container.w3-teal
      h1 Informatics Social Network
  .w3-container.w3-large
        .w3-bar.w3-dark-grey.w3-mobile
            .w3-bar-item
                form.w3-container(action='/', method='GET')
                    input.w3-button.w3-wide(type= 'submit', value= 'Inicio')
            .w3-bar-item.w3-right
                form.w3-container(action='/login', method='GET')
                    input.w3-button.w3-wide(type= 'submit', value= 'Login')
  .w3-container  
    .w3-card-4
        header.w3-grey.w3-center
            h2.w3-text-white Registo de Utilizador
        if message
            .w3-container.w3-center
                h3 Informação
                p.red= message
        .w3-container
            form.w3-container(method="POST" action="/registo" enctype="multipart/form-data")
                input.w3-input(type="text" name="nome" placeholder="Nome")
                br
                input.w3-input(type="email" name="email" placeholder="Email")
                br
                input.w3-input(type="text" name="local" placeholder="Cidade")
                br
                input.w3-input(type="text" name="curso" placeholder="Curso")
                br
                input.w3-input(type="password" name="password" id='pass' placeholder="Password")
                br
                label.w3-label(id='message') 
                br
                h5.w3-center Tipo Utilizador
                table.w3-table-all.w3-center
                    tr
                        td
                            label.w3-text-pale-green
                                b Aluno
                                | &nbsp;
                                | &nbsp;
                                input.w3-btn.w3-light-grey(type='radio', name='tipoUtilizador',id= 'type',value='Aluno')
                        td
                            label.w3-text-pale-green
                                b Docente
                                | &nbsp;
                                | &nbsp;
                                input.w3-btn.w3-light-grey(type='radio', name='tipoUtilizador',id= 'type',value='Docente')
                br
                h5.w3-center Género
                table.w3-table-all.w3-center
                    tr
                        td
                            label.w3-text-pale-green
                                b Feminino
                                | &nbsp;
                                | &nbsp;
                                input.w3-btn.w3-light-grey(type='radio', name='genero',id= 'type',value='Feminino')
                        td
                            label.w3-text-pale-green
                                b Masculino
                                | &nbsp;
                                | &nbsp;
                                input.w3-btn.w3-light-grey(type='radio', name='genero',id= 'type',value='Masculino')
                br
                label.w3-cell Foto de perfil
                input.w3-input.w3-cell(type="file" name="imagem")
                br
                input.w3-btn.w3-black(type="submit" value="Registar" id='adicionar')               
            .w3-container.w3-center
                h3 Registo via ficheiro
                a(href=`/formulario/registo.txt` download) Link do fomulário
                .w3-container.w3-center
                    form.w3-container(method="POST" action="/registo/ficheiro" enctype="multipart/form-data")
                     input.w3-input.w3-cell(type="file" name="ficheiro")
                     input.w3-btn.w3-black(type="submit" value="Registar" id='adicionar') 
    br
    br
    .w3-container.w3-center.w3-bottom
        footer.w3-container.w3-teal
            address Informatics Social Network by RS/BS/RP copyrights reserved.  