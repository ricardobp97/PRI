extends layout

block content
  .w3-container.w3-center.w3-jumbo
    header.w3-container.w3-teal
      h1 Informatics Social Network
  .w3-container.w3-large
        .w3-bar.w3-dark-grey.w3-mobile
            .w3-bar-item
                form.w3-container(action='/aluno', method='GET')
                    input.w3-button.w3-wide(type= 'submit', value= 'Inicio')
            .w3-bar-item.w3-right
                form.w3-container(action='/logout', method='GET')
                    input.w3-button.w3-wide(type= 'submit', value= 'Logout')
  .w3-container  
    .w3-card-4
        header.w3-grey.w3-center
            h2.w3-text-white Atualizar Evento
        .w3-container
            form.w3-container(method="POST" action=`/aluno/eventos/atualizar?id=${evento._id}`)
                input.w3-input(type="text" name="titulo" value=evento.titulo placeholder="Titulo")
                br
                input.w3-input(type="text" name="local" value=evento.local placeholder="Local")
                br
                input.w3-input(type="text" name="uc" value=evento.uc placeholder="Unidade Curricular, (Não Obrigatório)")
                br
                label
                    b Duração (Não Obrigatório)
                input.w3-input(type="time" name="duracao" value=evento.duracao placeholder="Duracao, (Não Obrigatório)")
                br
                label
                    b Data
                input.w3-input(type="date" name="data" value=evento.data placeholder="Data")
                br
                label
                    b Hora
                input.w3-input(type="time" name="hora" value=evento.hora placeholder="Hora")
                br
                input.w3-input.w3-border.w3-light-grey(type="text" name='descricao' value=evento.descricao placeholder="Descricão")
                label.w3-label(id='message') 
                br
                h5.w3-center Visivilidade
                if (evento.visivilidade == 0)
                    table.w3-table-all.w3-center
                        tr
                            td
                                label.w3-text-pale-green
                                    b Pública
                                    | &nbsp;
                                    | &nbsp;
                                    input.w3-btn.w3-light-grey(type='radio', name='visivilidade',id= 'type', checked, value='0')
                            td
                                label.w3-text-pale-green
                                    b Privada (para alunos)
                                    | &nbsp;
                                    | &nbsp;
                                    input.w3-btn.w3-light-grey(type='radio', name='visivilidade',id= 'type',value='1')
                            td
                                label.w3-text-pale-green
                                    b Alunos e Docentes
                                    | &nbsp;
                                    | &nbsp;
                                    input.w3-btn.w3-light-grey(type='radio', name='visivilidade',id= 'type',value='3')
                else if (evento.visivilidade == 1)
                    table.w3-table-all.w3-center
                        tr
                            td
                                label.w3-text-pale-green
                                    b Pública
                                    | &nbsp;
                                    | &nbsp;
                                    input.w3-btn.w3-light-grey(type='radio', name='visivilidade',id= 'type', value='0')
                            td
                                label.w3-text-pale-green
                                    b Privada (para alunos)
                                    | &nbsp;
                                    | &nbsp;
                                    input.w3-btn.w3-light-grey(type='radio', name='visivilidade',id= 'type',checked,value='1')
                            td
                                label.w3-text-pale-green
                                    b Alunos e Docentes
                                    | &nbsp;
                                    | &nbsp;
                                    input.w3-btn.w3-light-grey(type='radio', name='visivilidade',id= 'type',value='3')
                else if (evento.visivilidade == 3)
                    table.w3-table-all.w3-center
                        tr
                            td
                                label.w3-text-pale-green
                                    b Pública
                                    | &nbsp;
                                    | &nbsp;
                                    input.w3-btn.w3-light-grey(type='radio', name='visivilidade',id= 'type', value='0')
                            td
                                label.w3-text-pale-green
                                    b Privada (para alunos)
                                    | &nbsp;
                                    | &nbsp;
                                    input.w3-btn.w3-light-grey(type='radio', name='visivilidade',id= 'type',value='1')
                            td
                                label.w3-text-pale-green
                                    b Alunos e Docentes
                                    | &nbsp;
                                    | &nbsp;
                                    input.w3-btn.w3-light-grey(type='radio', name='visivilidade',id= 'type',checked,value='3')
                br
                h5.w3-center Tipo Evento
                if (evento.tipo == "Teste-Exame")
                    table.w3-table-all.w3-center
                        tr
                            td
                                label.w3-text-pale-green
                                    b Teste/Exame
                                    | &nbsp;
                                    | &nbsp;
                                    input.w3-btn.w3-light-grey(type='radio', name='tipo',id= 'type', checked, value='Teste-Exame')
                            td
                                label.w3-text-pale-green
                                    b Evento Científico
                                    | &nbsp;
                                    | &nbsp;
                                    input.w3-btn.w3-light-grey(type='radio', name='tipo',id= 'type',value='Evento Científico')
                            td
                                label.w3-text-pale-green
                                    b Album Fotografia
                                    | &nbsp;
                                    | &nbsp;
                                    input.w3-btn.w3-light-grey(type='radio', name='tipo',id= 'type',value='Album Fotografia')
                            td
                                label.w3-text-pale-green
                                    b Reunião
                                    | &nbsp;
                                    | &nbsp;
                                    input.w3-btn.w3-light-grey(type='radio', name='tipo',id= 'type',value='Reunião')
                else if (evento.tipo == "Evento Científico")
                    table.w3-table-all.w3-center
                        tr
                            td
                                label.w3-text-pale-green
                                    b Teste/Exame
                                    | &nbsp;
                                    | &nbsp;
                                    input.w3-btn.w3-light-grey(type='radio', name='tipo',id= 'type', value='Teste-Exame')
                            td
                                label.w3-text-pale-green
                                    b Evento Científico
                                    | &nbsp;
                                    | &nbsp;
                                    input.w3-btn.w3-light-grey(type='radio', name='tipo',id= 'type',checked,value='Evento Científico')
                            td
                                label.w3-text-pale-green
                                    b Album Fotografia
                                    | &nbsp;
                                    | &nbsp;
                                    input.w3-btn.w3-light-grey(type='radio', name='tipo',id= 'type',value='Album Fotografia')
                            td
                                label.w3-text-pale-green
                                    b Reunião
                                    | &nbsp;
                                    | &nbsp;
                                    input.w3-btn.w3-light-grey(type='radio', name='tipo',id= 'type',value='Reunião')
                else if (evento.tipo == "Album Fotografia")
                    table.w3-table-all.w3-center
                        tr
                            td
                                label.w3-text-pale-green
                                    b Teste/Exame
                                    | &nbsp;
                                    | &nbsp;
                                    input.w3-btn.w3-light-grey(type='radio', name='tipo',id= 'type', value='Teste-Exame')
                            td
                                label.w3-text-pale-green
                                    b Evento Científico
                                    | &nbsp;
                                    | &nbsp;
                                    input.w3-btn.w3-light-grey(type='radio', name='tipo',id= 'type',value='Evento Científico')
                            td
                                label.w3-text-pale-green
                                    b Album Fotografia
                                    | &nbsp;
                                    | &nbsp;
                                    input.w3-btn.w3-light-grey(type='radio', name='tipo',id= 'type',checked,value='Album Fotografia')
                            td
                                label.w3-text-pale-green
                                    b Reunião
                                    | &nbsp;
                                    | &nbsp;
                                    input.w3-btn.w3-light-grey(type='radio', name='tipo',id= 'type',value='Reunião')
                else if (evento.tipo == "Reunião")
                    table.w3-table-all.w3-center
                        tr
                            td
                                label.w3-text-pale-green
                                    b Teste/Exame
                                    | &nbsp;
                                    | &nbsp;
                                    input.w3-btn.w3-light-grey(type='radio', name='tipo',id= 'type', value='Teste-Exame')
                            td
                                label.w3-text-pale-green
                                    b Evento Científico
                                    | &nbsp;
                                    | &nbsp;
                                    input.w3-btn.w3-light-grey(type='radio', name='tipo',id= 'type',value='Evento Científico')
                            td
                                label.w3-text-pale-green
                                    b Album Fotografia
                                    | &nbsp;
                                    | &nbsp;
                                    input.w3-btn.w3-light-grey(type='radio', name='tipo',id= 'type',value='Album Fotografia')
                            td
                                label.w3-text-pale-green
                                    b Reunião
                                    | &nbsp;
                                    | &nbsp;
                                    input.w3-btn.w3-light-grey(type='radio', name='tipo',id= 'type',checked,value='Reunião')
                br
                //- label.w3-cell Ficheiros
                //- .w3-container(id='lista')
                //-     .w3-container(id='f1')
                //-         br
                //-         button.w3-button.w3-round-large.w3-grey(id='mais1') Adicionar ficheiro
                br
                br
                input.w3-btn.w3-black(type="submit" value="Atualizar" id='adicionar')               
            br
            br
            
