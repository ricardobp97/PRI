extends layout

block content
    .w3-container.w3-center.w3-jumbo
        header.w3-container.w3-teal
            h1 Informatics Social Network
    .w3-container.w3-large
        .w3-bar.w3-dark-grey.w3-mobile
            .w3-bar-item
                form.w3-container(action='/', method='GET')
                    input.w3-button.w3-wide(type= 'submit', value= 'Inicio')
            .w3-bar-item.w3-right
                form.w3-container(action='/registo', method='GET')
                    input.w3-button.w3-wide(type= 'submit', value= 'Registo')
    .w3-container.w3-center
        .w3-card.w3-display-middle.w3-padding-large
            h3.w3-center Login
            form.w3-container(method="POST" action="/login")
                input.w3-input(type="text" name="email" placeholder="Email")
                input.w3-input(type="password" name="password" placeholder="Password")
                br
                input.w3-btn.w3-black(type="submit" value="Login") 
    if message
        .w3-container.w3-center
            h3 Informação
            p.red= message
    .w3-container.w3-center.w3-bottom
        footer.w3-container.w3-teal
             address Informatics Social Network by RS/BS/RP copyrights reserved.
