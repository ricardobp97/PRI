extends layout

block content
  .w3-container.w3-center.w3-jumbo
    header.w3-container.w3-teal
      h1 Informatics Social Network
  .w3-container.w3-large
    .w3-bar.w3-dark-grey.w3-mobile
        .w3-bar-item
            form.w3-container(action='/docente', method='GET')
                input.w3-button.w3-wide(type= 'submit', value= 'Inicio') 
        .w3-bar-item.w3-right
            form.w3-container(action='/logout', method='GET')
                input.w3-button.w3-wide(type= 'submit', value= 'Logout')
  .w3-container  
    .w3-card-4
        header.w3-grey.w3-center
            h2.w3-text-white Perfil Individual
            if ( utilizador.fotografia )
              img(src=`/data/${utilizador._id}/perfil/${utilizador.fotografia.name}`, alt="Foto de Perfil", height="20%", width="20%")
            .w3-container.w3-center
              h4 Foto de perfil
              .w3-container.w3-center
                  form.w3-container(method="POST" action="/docente/atualizar/fotoPerfil" enctype="multipart/form-data")
                    input.w3-input.w3-cell(type="file" name="fotografia")
                    input.w3-btn.w3-black(type="submit" value="Atualizar foto de perfil" id='fotoperfil') 
        .w3-container
            form.w3-container(method="POST" action="/docente/perfil/atualizar")
                input.w3-input(type="email" name="email" value=utilizador.email readonly="readonly")
                br
                input.w3-input(type="text" name="nome" value=utilizador.nome)
                br
                input.w3-input(type="text" name="curso" value=utilizador.curso)
                br
                input.w3-input(type="text" name="local" value=utilizador.local)
                br
                input.w3-input(type="password" name="password" id='pass' placeholder="Password")
                br
                label.w3-label(id='message') 
                br
                input.w3-input(type="text" name="tipoUtilizador" value=utilizador.tipoUtilizador readonly="readonly")
                br
                input.w3-input(type="text" name="genero" value=utilizador.genero readonly="readonly")
                br
                input.w3-btn.w3-black(type="submit" value="Atualizar" id='adicionar' class = 'enable')                    
          
        br
        br
  .w3-container.w3-center.w3-bottom
    footer.w3-container.w3-teal
